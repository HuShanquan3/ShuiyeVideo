<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:fadeScrollbars="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="@string/app_dpi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_iqiyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爱奇艺" />

                <RadioButton
                    android:id="@+id/rb_letv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐视" />

                <RadioButton
                    android:id="@+id/rb_youku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优酷" />

                <RadioButton
                    android:id="@+id/rb_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="腾讯" />

                <RadioButton
                    android:id="@+id/rb_mgtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="芒果" />

                <RadioButton
                    android:id="@+id/rb_sohu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜狐" />

                <RadioButton
                    android:id="@+id/rb_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="UA" />

            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btn_rect"
                android:onClick="testWeb"
                android:text="网页浏览"
                android:textSize="30sp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_rect"
            android:onClick="soletv"
            android:text="乐视搜索(支持VIP)"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_rect"
            android:onClick="soyouku"
            android:text="优酷搜索"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_rect"
            android:onClick="soiqiyi"
            android:text="爱奇艺搜索"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_rect"
            android:onClick="soqq"
            android:text="腾讯搜索"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_rect"
            android:onClick="mdd"
            android:text="埋堆堆港剧"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_rect"
            android:onClick="somgtv"
            android:text="芒果搜索"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_rect"
            android:onClick="sohu"
            android:text="搜狐搜索"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_test_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_rect"
            android:onClick="testUrl"
            android:text="测试播放"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:text="." />
    </LinearLayout>

</ScrollView>