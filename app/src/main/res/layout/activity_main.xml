<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fadeScrollbars="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:text="@string/app_dpi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_iqiyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爱奇艺" />

                <RadioButton
                    android:id="@+id/rb_letv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐视" />

                <RadioButton
                    android:id="@+id/rb_youku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优酷" />

                <RadioButton
                    android:id="@+id/rb_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="腾讯" />

                <RadioButton
                    android:id="@+id/rb_mgtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="芒果" />

                <RadioButton
                    android:id="@+id/rb_sohu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜狐" />

                <RadioButton
                    android:id="@+id/rb_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UA"
                    android:visibility="gone" />

            </RadioGroup>

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="testWeb"
                android:text="网页浏览" />
        </LinearLayout>

        <com.zhy.view.flowlayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="soletv"
                android:text="乐视搜索(支持VIP)" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="soiqiyi"
                android:text="爱奇艺搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="soqq"
                android:text="腾讯搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="soyouku"
                android:text="优酷搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="mdd"
                android:text="埋堆堆港剧" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="iviBupt"
                android:text="@string/ivi_bupt" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="jscmcc1"
                android:text="南京移动源 183.207.X.X" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="szcmcc"
                android:text="苏州移动源" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="jscmcc2"
                android:text="南京移动源 223.110.X.X" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="jxcmcc"
                android:text="江西移动源" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="otherTV"
                android:text="其他直播源" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="bilibili"
                android:text="哔哩哔哩 直播源"
                android:visibility="gone" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="somgtv"
                android:text="芒果搜索" />

            <Button
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="sohu"
                android:text="搜狐搜索" />

            <Button
                android:id="@+id/btn_test_url"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="testUrl"
                android:text="测试播放" />

        </com.zhy.view.flowlayout.FlowLayout>
    </LinearLayout>

</ScrollView>