<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shuiyes.video"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".SVApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- android:windowSoftInputMode="adjustUnspecified|stateHidden" -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".youku.YoukuSoActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".youku.YoukuVActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".letv.LetvSoActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".letv.LetvVActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".iqiyi.IQIyiSoActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".iqiyi.IQiyiVActivity"
            android:screenOrientation="landscape"/>

    </application>

</manifest>